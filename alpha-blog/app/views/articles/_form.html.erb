<div class="container">
  
  <%= render 'shared/errors', obj: @article %>

  <!-- form fields generated -->
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow-sm p-3 mb-3 bg-white rounded", local: true ) do |f| %>
        <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %> 
            </div>
        </div>
        
        <div class="form-group row">
            <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control",placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row">
            <%= f.label :category, class: "col-2 col-form-label" %>
           <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Make a selection from list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-success btn-lg"%>
        </div>
      <% end %> 
    </div>
    <div class="md-3">
      <%= link_to '[ Cancel and return to article listing ]', articles_path, class: "text-info" %>
    </div>
   </div>
</div>