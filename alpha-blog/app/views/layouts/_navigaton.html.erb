<nav class="navbar navbar-expand-lg navbar-light bg-light">
       <%= link_to "Groovebone", root_path, class: "navbar-brand", id: "logo" %>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
       </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
         <ul class="navbar-nav ml-auto">
          
           <li class="nav-item">
              <%= link_to "Bloggers", users_path, class: "nav-link" %>
           </li>
           <!-- dropdown for no non signed in nav -->
           <li class="nav-item dropdown">
             <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               Articles
             </a>
             <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% if logged_in? %>
                   <%= link_to "Create new article", new_article_path, class: "dropdown-item" %>
               <% end %>
               <%= link_to "View articles", articles_path, class: "dropdown-item" %>
               
               <div class="dropdown-divider"></div>
               <a class="dropdown-item" href="#">Something else here</a>
             </div>
           </li>

           <li class="nav-item dropdown">
             <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               Categories
             </a>
             <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% if logged_in? && current_user.admin %>
                   <%= link_to "Create new category", new_category_path, class: "dropdown-item" %>
               <% end %>
               <%= link_to "View Categories", categories_path, class: "dropdown-item" %>
               
               
             </div>
           </li>
           <!-- set up for login/out button and dropdown for user -->
           <% if logged_in? %>
             <li class="nav-item dropdown nav-right">
                 <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                   <%= "(Admin)" if current_user.admin? %> <%= current_user.username %> 
                 </a>
                 <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <%= link_to "View your profile", user_path(current_user), class: "dropdown-item" %>
                    <%= link_to "Edit your profile", edit_user_path(current_user), class: "dropdown-item" %>
                    <%= link_to "Delete your profile", user_path(current_user), class: "dropdown-item text-danger", method: :delete, data:{confirm: "Are you sure?" } %>
                 </div>
              </li>
               <li class="nav-item">
                 <%= link_to 'logout', logout_path, class: "btn btn-outline-success my-2 my-sm-0", method: :delete %>
               </li>
               
           
           <% else %>
               <li class="nav-item my-2 my-sm-0">
                 <%= link_to 'Sign up', signup_path, class: "nav-link"%>
               </li>
               <li class="nav-item my-2 my-sm-0">
                 <!-- may change to search button eventually -->
                 <%= link_to 'log in', login_path, class: "btn btn-outline-success my-2 my-sm-0"%>
               </li>
               
           <% end %>
           
         </ul>
       </div>
     </nav>